@{
    ViewBag.Title = "Get your quote of the day";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<!DOCTYPE html>
<html>
<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("button").click(function(){
        $.get("http://quotes.rest/qod.json", function(data){
            $("#output").html();
            console.log(data);
            $("#output").prepend("<div><div class='well'><h2>" + data.contents.quotes[0].quote + "</h2></div></div>");
        });
    });
});
</script>
</head>
<body>
<button id="button" class="btn btn-primary">Get your quote</button>
<div id="output"></div>
<br />
</body>
</html>

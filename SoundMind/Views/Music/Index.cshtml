@model IEnumerable<SoundMind.Models.Music>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>itunessearch</title>
    <link rel="stylesheet" href="http://bootswatch.com/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="itunesstyle.css">
    </head>
    <body>
        <div class="container">
            <h1>Music Search</h1>
            <p>Enter any song</p>
            <input id="searchTerm" name="search" placeholder="Search..">
            <button id="search" class="btn btn-primary">SEARCH</button>
            <div id="output" class="swatch"></div>
        </div>
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="https://bootswatch.com/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="itunesdata.js"></script>
    </body>
</html>

@Scripts.Render("~/Scripts/itunesdata.js")


